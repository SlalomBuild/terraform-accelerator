# Universal config for text editors
# https://EditorConfig.org

# top-most EditorConfig file
# Set to true to stop .editorconfig files search on current file.
root = true

[*]
insert_final_newline = false
charset = utf-8

[*.json]
indent_style = space
indent_size = 2
max_line_length = 60

[*.md]
indent_style = space
indent_size = 2
max_line_length = 140

[{*.py, *.pyi}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.sh]
indent_style = space
# Note: indent_size isn't applied for Bash scripts in PyCharm for some reason. Pycharm is using indentation size 2.
indent_size = 2
end_of_line = lf

[{*.tf, *.tfvars}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2
max_line_length = 120