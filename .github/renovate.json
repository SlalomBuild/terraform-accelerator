{
  "timezone": "America/Vancouver",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "baseBranches": [
    "main",
    "/^release\\/v\\d{1,2}$/"
  ],
  "labels": [
    "auto-update"
  ],
  "dependencyDashboardAutoclose": true,
  "enabledManagers": [
    "terraform"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "terraform": {
    "ignorePaths": [
      "docs/**",
      "examples/**",
      "**/context.tf"
    ]
  }
}
